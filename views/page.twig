{% extends "base.twig" %}

{% block content %}
<article class="post-type-{{post.post_type}} article" id="post-{{post.ID}}">
	<header class="article-header">
		<h1 class="article-title">{{post.title}}</h1>
	</header>
	<section class="article-content">
		<main class="article-content">
			{{post.content}}
		</main>
	</section>
</article>
{% endblock %}